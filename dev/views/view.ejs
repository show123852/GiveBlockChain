<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <title>Give Block Chain</title>
</head>
<body>
    <nav class="navbar navbar-expand  navbar-dark bg-dark">
		<div class="container">
			<div class="navbar-header">
				<a class="navbar-brand" href="/">Home</a>
			</div>
			<div>
				<ul class="navbar-nav mr-auto">
						<% if(session){ %>
							<li style="padding-top: 7px; color: white">[<%= session %>님]</li>
							<li class="nav-item"><a class="nav-link" href="/logout">로그아웃 </a></li>
							<li class="nav-item"><a class="nav-link" href="/mypage">마이페이지</a></li>
						<% }else { %>
							<li class="nav-item"><a class="nav-link" href="/login">로그인 </a></li>
							<li class="nav-item"><a class="nav-link" href='/addmember'>회원 가입</a></li>
						<% } %>
					<li class="nav-item"><a class="nav-link" href="/view">기부 목록</a></li>
					<li class="nav-item"><a class="nav-link" href="/block-explorer">기부내역</a></li>
				</ul>
			</div>
		</div>
	</nav>
	<div class="jumbotron">
		<div class="container">
			<h1 class="display-3">기부 목록</h1>
		</div>
	</div>
	<div class="container">
			<div>
				<div class="text-right">
					<span class="badge badge-success"><%= data.length %> 건</span>
				</div>
			</div>
			<div style="padding-top: 50px">
				<table class="table table-hover">
					<tr>
						<th>번호</th>
						<th>제목</th>
						<th>작성일</th>
						<th>조회</th>
						<th>글쓴이</th>
					</tr>
                    <% data.forEach(function (board, index) { %>
                        <tr>
                            <td width="70"><%= board.num %></td>
                            <td ><a href="/view/<%=board.num %>"><%= board.subject %></a></td>
                            <td ><%= board.regist_day %></td>
                            <td width="70"><%= board.hit %></td>
                            <td width="80"><%= board.name %></td>
                        </tr>
                        <% }); %>
				</table>
			</div>
			<div align="left">
				<table>
					<tr>
						<td width="100%" align="left">&nbsp;&nbsp; 
						<select name="items" class="txt">
								<option value="subject">제목에서</option>
								<option value="content">본문에서</option>
								<option value="name">글쓴이에서</option>
						</select> <input name="text" type="text" /> <input type="submit" id="btnAdd" class="btn btn-primary " value="검색 " />
						</td>
						<td width="100%" align="right">
							<a href="/create" class="btn btn-primary">&laquo;글쓰기</a>
						</td>
					</tr>
				</table>
			</div>
		<hr>
	</div>
	<%- include('footer') %>
</body>
</html>